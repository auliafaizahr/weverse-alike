<div class="row py-3 navbar_custom">
  <div class="col-lg-6 col-md-6 justify-content-start">
    <ul class="nav">
      <li class="nav-item">
        <span class="nav-link">
          <button class="navbar_button_dropdown" id="toggle_sidebar">
            <i class="fas fa-bars"></i>
          </button>
        </span>
      </li>
      <li class="nav-item">
      <% if current_user.Artist? %>
        <%= link_to group_posts_path(@group), class: "nav-link" do %>
          <%= image_tag "weverse_logo.png", style: "width: 6em; height: 1em; object-fit: cover;" %>
        <% end %>
      <% else %>
        <%= link_to root_path, class: "nav-link" do %>
          <%= image_tag "weverse_logo.png", style: "width: 6em; height: 1em; object-fit: cover;" %>
        <% end %>
      <% end %>
      </li>
    </ul>
  </div>
  <div class="col-lg-6 col-md-6 justify-content-end">
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <% if @group %>
          <%= link_to edit_group_profiles_path(@group), class: "nav-link" do %>
            <i class="fas fa-user"></i>
          <% end %>
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to root_path, class: "nav-link" do %>
          <i class="far fa-bell"></i>
        <% end %>
      </li>
      <li class="nav-item">
        <div class="dropdown">
          <button type="button" class="nav-link navbar_button_dropdown" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fas fa-ellipsis-h" data-toggle="dropdown" id="dropdon"></i>
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
            <% if @group %>
              <%= link_to  "Change Username",  edit_group_join_group_path(@group, @group.join_groups), remote: true, data: {toggle: "modal", target: "#modal_shared"},class: "dropdown-item" %>
            <% end %>
            <% if current_user.Admin? %>
              <%= link_to  "Admin Page",  admins_path, class: "dropdown-item" %>
            <% end %>
            <% if user_signed_in? %>
              <div class="dropdown-divider"></div>
              <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            <% end %>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>

<%= render 'layouts/toggle_sidebar' %>
