<%= render 'shared/modal' %>

<%= render 'layouts/navbar' %>

<div class="row row_content">
  <div class="col row d-flex flex-row">
    <% @groups.each do |group| %>
      <div class="col-lg-3 col-md-6 col-sm-12 my-3">
        <% if @user.join_group?(@user, group).any? %>
          <%= link_to group_posts_path(group) do %>
            <div class="card" style="border-radius: 15px;">
              <% if group.avatar.attached? %>
                <%= image_tag group.avatar, class: "img_thumbnail_group" %>
              <% else %>
                <%= image_tag 'login.jpg', class: "img_thumbnail_group" %>
              <% end %>
              <div class="card-body">
                <%= group.name %>
              </div>
            </div>
          <% end %>
        <% else %>
          <%= link_to new_group_join_group_path(group) do %>
            <div class="card" style="border-radius: 15px;">
              <% if group.avatar.attached? %>
                <%= image_tag group.avatar, class: "img_thumbnail_group" %>
              <% else %>
                <%= image_tag 'login.jpg', class: "img_thumbnail_group" %>
              <% end %>
              <div class="card-body">
                <%= group.name %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>