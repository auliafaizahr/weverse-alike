<%= render 'layouts/navbar' %>

<div class="row mt-5">
  <div class="col row d-flex flex-row">
    <% @groups.each do |group| %>
      <div class="col-lg-3 col-md-6 col-sm-12 my-3">
        <%= link_to group_posts_path(group) do %>
          <div class="card">
            <%= image_tag 'login.jpg', style: "width: 100%;" %>
            <div class="card-body">
              <%= group.name %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>