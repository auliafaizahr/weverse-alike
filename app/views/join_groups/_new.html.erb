<div class="row justify-content-center">
  <div class="mt-4 post-user">
    <div class="card-body">
      <div class="col ml-3">
        <%= simple_form_for([@group, @group.join_groups.build], remote: true) do |f| %>
          <div class="form-inputs">
          <div class="row">
            <div class="col-2">
                <%= image_tag "default.jpg", style: "width: 100px; height: 100px; border-radius: 50%; object-fit: cover;" %>
            </div>
            <div class="col-10 px-5 align-self-center">
              <%= f.file_field :avatar %>
            </div>
          </div>
          <div class="row input-group mb-3 comment_box">
            <div class="form-group w-100">
              <Label class="row">Choose Artist</Label>
              <%= f.select :user_id, @artists.map { |r| [r.name, r.id,] }, {}, {class: "form-control js-example-basic-single"} %>
            </div>
          </div>
          <div class="row input-group mb-3 comment_box">
            <div class="form-group w-100">
              <label for="">Nickname : </label>
              <%= f.input :username, label: false, input_html: { class: "w-100 px-3 py-3 input_nickname", id: "input_username" } %>
            </div>
          </div>
          <div class="row  justify-content-center">
            <div class="form-group my-2">
                <span id="error_message"></span>
            </div>
          </div>
          <div class="row  justify-content-center">
            <div class="form-group">
              <%= f.button :submit, "Update", class: "btn btn btn-primary btn-submit-post"  %>
            </div>
          </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>