<div class="container row min-vh-100 align-content-center">
  <div class="col-lg-6 col-md-6 col-sm-12 py-2 align-self-center">
    <h2>Log in</h2>
  
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-5"}) do |f| %>
      <div class="form-inputs">
        <div class="form-group">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: 'email@example.com',
                      input_html: { autocomplete: "email", class: "form-control input-form" } %>
        </div>
          <div class="form-group">
            <%= f.input :password,
                        required: false,
                        placeholder: 'enter your password',
                        input_html: { autocomplete: "current-password", class: 'form-control input-form' } %>
          </div>
      </div>
  
      <div class="form-actions my-5">
        <%= f.submit "Log in", class: "submit_btn_login" %>
      </div>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
  <div class="col-lg-6 col-md-6 col-sm-12">
    <%= image_tag 'login.jpg', class: "img-login" %>
  </div>
</div>
