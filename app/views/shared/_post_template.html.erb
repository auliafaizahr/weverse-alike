<% posts.each do |post| %>
  <% unless post.user_id.nil? %>
    <div class="card mt-4 post-user">
      <div class="card-body">
        <h5 class="card-title">Moments</h5>
        <div class="row">
          <div class="col-2">
          </div>
          <div class="col-7">
            <ul class="user">
              <li class="username"><%= post.user.username unless post.user.nil? %></li>
              <li class="date_post"><%= post.created_at %></li>
              <li class="mt-3">
                <p>
                  <%= post.post %>
                </p>
              </li>
            </ul>
          </div>
          <div class="col-3">
            <ul class="menu">
              <li><i class="fas fa-language"></i></li>
              <li><i class="fas fa-ellipsis-v"></i></li>
            </ul>
          </div>
        </div>
        <div class="row posted">
          <div class="col"></div>
        </div>
        <div class="row cheers">
          <div class="col">
            <ul class="cheers py-2">
              <li class="mr-4 cheers_button">
                <%= render 'shared/likes/form', post: post %>
              </li>
              <li class="mr-4">
                <i class="far fa-comment cheers_button"></i>
                  <% if post.comments.any? %>
                    <%= post.comments.size %> <span>Comments</span>
                  <% else %>
                    <span>Comment First</span>
                  <% end %>
              </li>
            </ul>
          </div>
        </div>
        <div class="row">
          <div class="col">
            <% if post.comments %>
              <% post.comments.each do |comment| %>
                <%= render 'shared/comments', comment: comment %>
              <% end %>
            <% end %>
            <div class="row comment_posted">
              <div class="col-2">
                <% if @user.avatar.attached? %>
                  <%= image_tag @user.avatar, class: 'profile_picture' %>
                <% else %>
                  <%= image_tag 'taehyun.jpg', class: 'profile_picture' %>
                <% end %>
              </div>
              
              </div>
            </div>
            <%# <%= render 'shared/new_comment',  s post: post  %>          
        </div>
      </div>
    </div>
  <% end %>
<% end %>