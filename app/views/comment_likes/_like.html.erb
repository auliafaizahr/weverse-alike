<% if comment.commentable_type == "Post" %>
  <%= link_to group_post_comment_comment_likes_path(@group, comment.id, comment), id: "like_comment", method: :post, remote: true  do %>
    <i class="far fa-thumbs-up"></i>
  <% end %>
<% elsif comment.commentable_type == "MediaVideo" %>
  <%= link_to group_media_comment_comment_likes_path(@group, comment.id, comment), method: :post, remote: true  do %>
    <i class="far fa-thumbs-up"></i>
  <% end %>
<% end %>